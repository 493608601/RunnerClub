<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:animation="http://schemas.android.com/apk/res-auto"
    xmlns:shade="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_bg"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
<com.tarena.allrun.view.AnimationView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            animation:images="@array/animationImages"
            animation:sleepTime="1000.0" /> 
        

        <com.tarena.allrun.view.ShadeView
                        android:id="@+id/shadeview"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            shade:shade_color="#FF888888"
            shade:text="运动伙伴，就选酷跑"
            shade:text_color="#FFFF0000"
            shade:text_size="24"
             />
        
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
           android:text="运动伙伴，就选酷跑2"
            />
    </LinearLayout>

</RelativeLayout>